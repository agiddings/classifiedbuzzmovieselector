<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controllers.LoginActivity"
    android:background="#fcfcfc">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:label="@string/label_login">


        <ImageView android:id="@+id/splashscreen" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_logo"
            android:layout_gravity="center"
            android:layout_marginTop="80px"
            android:layout_marginBottom="80px" />

        <EditText
            android:layout_width="770px"
            android:layout_height="wrap_content"
            android:id="@+id/loginEmail"
            android:hint="email address" />

        <EditText
            android:layout_width="770px"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginPassword"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:hint="password"
            android:layout_marginTop="25px" />

        <Button
            android:layout_width="770px"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/LoginBtn"
            android:onClick="onLoginButtonPressed"
            android:background="#FA9B16"
            android:textColor="#fff"
            android:textSize="50px"
            android:layout_marginTop="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New user? Click here to Register!"
            android:id="@+id/registrationText"
            android:textSize="15dp"
            android:textColor="#1dabee"
            android:linksClickable="false"
            android:longClickable="false"
            android:onClick="onRegistrationLinkPressed"
            android:layout_weight="0.07"
            android:layout_marginTop="70px" />
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can&apos;t access your account?"
            android:id="@+id/textView10"
            android:textSize="15dp"
            android:textColor="#1dabee"
            android:linksClickable="false"
            android:longClickable="false"
            android:onClick="onForgotPasswordLinkPressed"
            android:layout_marginTop="25px" />
            -->
    </LinearLayout>

</RelativeLayout>
