<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.ProfileActivity"
    android:background="#fcfcfc"
    android:scrollIndicators="right">

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:id="@+id/newName"
        android:hint="name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:id="@+id/newEmail"
        android:hint="email address"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPassword1"
        android:hint="password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/newPassword2"
        android:hint="confirm password"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:id="@+id/newMajor"
        android:hint="major"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <EditText
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/newInfo"
        android:hint="additional info"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px" />

    <Button
        android:layout_width="770px"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:id="@+id/updateProfile"
        android:onClick="onProfileButtonPressed"
        android:background="#FA9B16"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:textSize="50px"
        android:layout_marginTop="50px" />

</LinearLayout>