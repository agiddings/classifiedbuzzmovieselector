<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#dddee5"
    android:gravity="right"
    android:nestedScrollingEnabled="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:gravity="right"
        android:dividerPadding="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/search"
            android:layout_weight="0.09"
            android:onClick="onGoToSearchButtonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:id="@+id/EditProfile"
            android:layout_weight="0.09"
            android:onClick="onEditProfileButtonClicked" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/button"
            android:onClick="onLogoutButtonClicked" />

    </LinearLayout>

    <Button
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:text="Recommendations"
        android:id="@+id/button5"
        android:onClick="onRecommendationButtonClicked" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Successfully logged inl!\n Welcome to Classified&apos;s BuzzMovieSelector"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.09"
        android:textStyle="normal"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:id="@+id/goToAdmin"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:onClick="onAdminButtonClicked" />

</LinearLayout>